---
import WaiterLayout from "../layouts/WaiterLayout.astro";
---

<WaiterLayout title="Waiter">
  <div class="order-menu">
    <div class="menu-container">
      <div class="header">
        <div class="burger-cont">
          <button class="burger">
            <i class="fa-solid fa-bars"></i>
          </button>
          <div class="search">
            <input class="" type="text" placeholder="search" />
            <button>Search</button>
          </div>
        </div>
        <button class="filter">
          <i class="fa-solid fa-filter"></i>
        </button>
      </div>
      <div class="category">
        <button>All</button>
        <button>Brew Equipment</button>
        <button>Coffee</button>
        <button>Espresso</button>
        <button>Instant + RTD</button>
        <button>Ceramics</button>
        <button>Appearance</button>
      </div>
      <div class="menu-list">
        <div class="menu-item">
          <div class="img-load">
            <img src="/img-box.svg" alt="item-img" />
          </div>

          <div class="description">
            <p class="title">Fellow Prismo French Black</p>
            <p class="price">$30.00</p>
          </div>
        </div>

        <div class="menu-item">
          <div class="img-load">
            <img src="/img-box.svg" alt="item-img" />
          </div>

          <div class="description">
            <p class="title">Fellow Prismo French Black</p>
            <p class="price">$30.00</p>
          </div>
        </div>

        <div class="menu-item">
          <div class="img-load">
            <img src="/img-box.svg" alt="item-img" />
          </div>

          <div class="description">
            <p class="title">Fellow Prismo French Black</p>
            <p class="price">$30.00</p>
          </div>
        </div>

        <div class="menu-item">
          <div class="img-load">
            <img src="/img-box.svg" alt="item-img" />
          </div>

          <div class="description">
            <p class="title">Fellow Prismo French Black</p>
            <p class="price">$30.00</p>
          </div>
        </div>

        <div class="menu-item">
          <div class="img-load">
            <img src="/img-box.svg" alt="item-img" />
          </div>

          <div class="description">
            <p class="title">Fellow Prismo French Black</p>
            <p class="price">$30.00</p>
          </div>
        </div>
      </div>
    </div>
    <div class="order">
      <div class="header">
        <p>Order Details</p>
      </div>
      <form>
        <div class="order-list">
          <div class="order-item">
            <div class="img-load">
              <img src="/img-box.svg" alt="order-item" />
            </div>
            <!-- <img src="/img-box.svg"  alt="order-item"/> -->
            <div class="order-detail">
              <p>Fellow Clara French</p>
              <div>
                <p>2x</p>
                <p>$198.00</p>
              </div>
            </div>
          </div>
        </div>
        <div>
          <p>Subtotal:</p>
          <p>$742.00</p>
        </div>
        <div>
          <p>Discount sales:</p>
          <p>$4.00</p>
        </div>
        <div>
          <p>Total sales tax:</p>
          <p>$2.00</p>
        </div>
        <div>
          <p>Total:</p>
          <p>$2.00</p>
        </div>
        <button>Pay now</button>
      </form>
    </div>
  </div>
</WaiterLayout>

<style lang="postcss">
    .order-menu{
        @apply flex h-screen w-screen overflow-hidden;

    }
    .menu-container {
        @apply flex-1 flex flex-col;
    }

    .menu-container .category {
        @apply flex px-8 mb-2 py-3 gap-5 overflow-x-auto overflow-y-hidden;
    }

    .menu-container .category button {
        @apply block h-fit border border-slate-400 py-2 px-5 rounded-lg font-bold text-lg text-nowrap;
    }

    .menu-container .header {
        @apply py-5 flex px-8 gap-5 justify-between ;
    }

    .search {
        @apply bg-white rounded-lg flex overflow-hidden p-1 pl-2 gap-5 items-center border border-slate-400;
    }

    .search input {
        @apply w-[35vw] outline-none ml-2;
    }
    .search button {
        @apply bg-slate-800 text-white px-8 py-2 rounded-lg;
    }

    .header .burger-cont {
        @apply flex gap-5 items-center;
    }

    .header .burger {
        @apply h-full border border-slate-400 px-5 rounded-lg text-2xl;
    }

    button.filter {
        @apply h-full border border-slate-400 px-5 rounded-lg text-2xl;
    }
    
    .menu-list {
        @apply overflow-auto grid grid-cols-4 gap-5 px-8;
    }

    .menu-item {
        @apply flex flex-col justify-between border rounded-xl border-slate-400 h-[calc(100vh/2.3)];
    }

    .menu-item .img-load {
        @apply bg-slate-300 m-3 rounded-xl flex items-center justify-center flex-1;
    }
    .menu-item .img-load img {
        @apply w-1/3;
    }

    .menu-item .description {
        @apply h-20 mx-3 flex flex-col gap-2;
    }

    .menu-item .description p.title {
        @apply font-bold text-lg; 
    }

    .menu-item .description p.price {
        @apply font-medium   text-lg; 
    }

    .order {
        @apply h-full w-[25vw] overflow-hidden px-6 py-4 border-l border-slate-400 bg-gray-100;
    }

    .order .header {
        @apply border-b border-slate-400 pb-5 font-bold text-xl;
    }

    .order-item{ 
        @apply flex;    
    }
    .order-list {
        @apply border-dashed border-b border-slate-400;
    }

    .order-item img {
        @apply h-12;
      
    }

    .order-item .img-load {
        @apply bg-slate-300 rounded-xl flex items-center justify-center w-24 h-24;
    }

    .category::-webkit-scrollbar {
        height: 8px;
    }

.menu-list::-webkit-scrollbar {
    width: 8px;
}
 
.category::-webkit-scrollbar-track, .menu-list::-webkit-scrollbar-track {
    background: #f1f1f1; 
    @apply m-8;
}
 
.category::-webkit-scrollbar-thumb, .menu-list::-webkit-scrollbar-thumb {
    @apply bg-slate-400 hover:bg-slate-600;
    border-radius: 5px;
}
 
</style>
