---
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="login-cont">
    <h1>{title}</h1>
    <!-- <p class="error">Нэврэх нэр эсвэл нууц үг буруу байна!</p> -->
    <slot />
  </div>
</Layout>

<style lang="postcss" is:global>
    body {
      @apply m-0 p-0 bg-cover font-sans;
    }
  
    div {
      @apply box-border;
    }
  
    .login-cont {
      @apply max-md:p-7 max-md:w-[80vw]  absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 p-10 border border-[#dadce0] rounded-lg;
    }
  
    .login-cont .error {
      @apply text-center text-red-600;
    }
  
    .login-cont h1 {
      @apply p-0 text-center text-[#202124] font-sans text-2xl font-normal mb-6
    }
  
    form .input-field {
      @apply relative;
    }
  
    form .input-field input {
      @apply w-full text-base mb-7 p-2 border border-[#ccc] bg-transparent rounded;
    }
  
    form .input-field label {
      @apply absolute top-0 left-2 py-2 px-0 text-gray-400 pointer-events-none z-[100];
      transition: 0.5s;
    }
  
    form .input-field input:valid ~ label,
    form .input-field input:focus ~ label,
    form .input-field input:not(:placeholder-shown) ~ label {
      @apply bg-white -top-[1.125rem] left-2 text-blue-600 text-xs h-[20px] px-1;
    }
  
    form .input-field input:focus {
      @apply outline-none border-2 border-blue-600;
    }
  
    .login-cont:has(.error) .input-field input:placeholder-shown {
      @apply border border-red-500;
    }
  
    .login-cont input[type="submit"] {
      @apply px-5 py-3 border-none outline-none text-white bg-blue-600 cursor-pointer rounded-md text-base float-right; 
    }
  
    .login-cont input[type="submit"]:hover {
      @apply hover:bg-blue-500 shadow-md;
    }
  
    .login-cont .footer {
      @apply flex justify-between items-center
    }
  
  </style>
